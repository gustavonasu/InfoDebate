<% unless notice.blank? %>
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert">×</button>
		<h4><%= notice %></h4>
	</div>
<% end %>
<% unless flash[:error].blank? %>
	<div class="alert alert-error">
		<button type="button" class="close" data-dismiss="alert">×</button>
		<h4><%= flash[:error] %></h4>
	</div>
<% end %>