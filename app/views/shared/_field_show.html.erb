<% link ||= nil  %>
<div class="control-group">
  <%= label_tag label, label, :class => "control-label" %>
  <div class="controls">
    <% unless link.nil?  %>
      <a href="<%= link %>">
    <% end %>
    <%= label_tag nil, value %>
    <% unless link.nil?  %>
      </a>
    <% end %>
  </div>
</div>