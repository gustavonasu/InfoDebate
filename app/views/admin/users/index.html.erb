<%= render 'shared/admin_title_options', :title => "Listing users",
 				:options => [ {:label => "New User", :path => new_admin_user_path, :type => "info"} ] %>

<%= render 'shared/status_message' %>

<%= form_tag admin_users_path, :method => 'get' do %>
	<%= text_field_tag :q, params[:q], :class => "input-medium search-query" %>
	<%= submit_tag "Search", :class => "btn" %>
<% end %>

<%= will_paginate %>

<table class="table table-hover">
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Username</th>
		<th>Email</th>
		<th></th>
	</tr>
	<% if @users.empty? %>
		<tr><td colspan="5">No user found</td></tr>
	<% else %>
		<%= render @users %>
	<% end %>
</table>

<%= will_paginate %>
