<% if params[:div_class].nil? %>
  <% answers = "<ul class=\"item-list #{item_list_class(params[:id])}\">#{render :partial => 'answers'}</ul>" %>
  $(".modal-body-content").html("<%= raw escape_javascript answers %>");
  $(".modal-title").html("Pré-visualização de Comentário");
<% else %>
  $(".<%= params[:div_class] %>").append("<%= escape_javascript render :partial => 'answers' %>");
<% end %>
$(".modal-footer > .extra-buttons").empty();
$(function () {
    $('div.item-text').expander({
        slicePoint: 1000,
        expandSpeed: 100,
        expandText: 'Veja Mais',
        userCollapse: false
    });
});
