<li class="item" id="comment_<%= comment.id %>">
  <div class="item-body">
    <h4 class="item-heading">
      <a href="<%= admin_forum_thread_path(comment.thread) %>"><%= comment.thread.name %></a>
    </h4>
    <spam class="item-heading">
      Usuário: <a href="<%= admin_user_path(comment.user) %>"><%= comment.user.name %></a>
    </spam>
    <span class="item-heading username">
      <b><%= comment.user.username %></b>
    </span>
    <span class="item-heading time">
      <b><%= time_ago_in_words(comment.created_at) %></b>
    </span>
    <p class="item-text collapse"><%= simple_format comment.body %></p>
    <div class="item-body-footer">
      <spam class="item-footer">
        <strong>ID: <%= comment.id %></strong>
      </spam>
      <%= link_to "Visualizar", admin_comment_path(comment), :class => "item-footer view" %>
      <%= link_to "Pré-visualizar", show_modal_admin_comment_path(comment), :remote => true, :class => "item-footer preview",
           data: { toggle: "modal", target: "#admin-modal" } %>
      <% unless comment.parent.nil? %>
        <%= link_to "Respondendo a", show_modal_admin_comment_path(comment.parent), 
             :remote => true, :class => "item-footer parents",
             data: { toggle: "modal", target: "#admin-modal" } %>
      <% end %>
      <% unless comment.children.empty? %>
        <%= link_to "Respostas", admin_comment_path(comment), :remote => true, :class => "item-footer answers",
             data: { toggle: "modal", target: "#admin-modal" } %>
      <% end %>
      <% unless comment.complaints.empty? %>
        <%= link_to "Reclamações", admin_comment_path(comment), :remote => true, :class => "item-footer complaints",
             data: { toggle: "modal", target: "#admin-modal" } %>
      <% end %>
      <spam class="item-footer-right">
        <% generate_status_change_actions(comment, :comment).each do |action| %>
          <strong><%= link_to action[:label], action[:path], :remote => true, :"data-confirm" => action[:confirmation_msg],
                      :"data-method" => action[:method], :class => "item-footer " + action[:type] %></strong>
        <% end %>
      </spam>
    </div>
  </div>
</li>