<% unless request[:notice].nil? %>
  $(".fixed-sucess-alert > .message").html("<%= escape_javascript request[:notice] %>");
  $(".fixed-sucess-alert").show().fadeOut(2000);
  $("#comment_<%= @obj.id %>").addClass("item_changed");
  $("#comment_<%= @obj.id %>").fadeOut(1700);
  <% if @obj.deleted? %>
    $("#admin-modal").modal('hide');
  <% end %>
<% end %>

<% unless request[:error].nil? %>
  $(".fixed-error-alert > .message").html("<%= escape_javascript request[:error] %>")
  $(".fixed-error-alert").show()
<% end %>