<script type="text/javascript">
  $(document).ready(function() {
    $("#forum_thread_forum_id").select2({
      placeholder: "Selecione um Forum",
      formatNoMatches: function() { return "Forum n√£o encontrado" },
      formatSearching: function() { return "Buscando ..." },
      ajax: {
        url: "<%= admin_forums_path %>",
        dataType: 'json',
        data: function (term, page) {
          return {
            q: term,
            limit: 10
          };
        },
        results: function (data, page) {
          return {results: data};
        }
      },
      initSelection: function(element, callback) {
        <% unless @forum_thread.forum.nil? %>
            var id=$(element).val();
            if (id!="") {
              $.ajax("<%= admin_forum_path(@forum_thread.forum) %>",
                {
                     dataType: "json"
                }).done(function(data) { callback(data); });
            }
        <% end %>
      }
    });
  });
</script>

