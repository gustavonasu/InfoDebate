<%= render 'shared/admin_title_options', :title => "Visualização de Forum",
 				:options => [ {:label => "Alterar", :path => edit_admin_forum_path(@forum), :type => "info"},
							  {:label => "Apagar", :path => admin_forum_path(@forum), :type => "danger", 
								:method => "delete", :confirmation_msg => "Tem certeza que deseja prosseguir?"},
	 						  {:label => "Voltar", :path => admin_forums_path, :type => "info"} ] %>

<%= render 'shared/status_message' %>

<div class="form-horizontal">
	<%= render 'shared/field_show', :label => "Id", :value => @forum.id %>
	<%= render 'shared/field_show', :label => "Nome", :value => @forum.name %>
	<%= render 'shared/field_show', :label => "Descrição", :value => @forum.description %>
</div>