<%= render 'shared/admin_title_options', :title => "Lista de Forums",
           :options => [ {:label => "Novo Forum", :path => new_admin_forum_path, :type => "info"} ] %>
<%= render 'shared/status_message' %>

<%= render 'shared/admin/search_form', :path => admin_forums_path,
      :fields => {:q => {:tag => :text_field_tag, :class => "input-medium search-query"},
                  :status => {:tag => :hidden_field_tag} } %>


<%= render 'shared/admin/status_options', :status_options => Forum.valid_status, :status_default => :active %>

<%= will_paginate %>

<table class="table table-hover">
  <tr>
    <th>Id</th>
    <th>Nome</th>
    <th>Status</th>
    <th>Descrição</th>
    <th></th>
  </tr>
  <% if @forums.empty? %>
    <tr><td colspan="5">Nenhum Forum foi encontrado.</td></tr>
  <% else %>
    <%= render @forums %>
  <% end %>
</table>

<%= will_paginate %>
